# Environment Variables Template
# Copy this file to .env and fill in with actual values

# Environment
ENVIRONMENT=dev
HEADLESS=false
BROWSER=chromium

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=healthcare_test
DB_USER=test_user
DB_PASSWORD=<YOUR_DATABASE_PASSWORD_HERE>

# Application URLs
BASE_URL=https://dev-healthcare.example.com
API_BASE_URL=https://dev-api-healthcare.example.com

# Test Configuration
TIMEOUT=30
RETRY_COUNT=3
PARALLEL_WORKERS=4
SCREENSHOT_ON_FAILURE=true

# Security
# Generate encryption key: from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())
ENCRYPTION_KEY=<GENERATE_FERNET_KEY_HERE>
API_KEY=<YOUR_API_KEY_HERE>

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Reporting
ALLURE_RESULTS_DIR=results/allure-results
REPORT_PORTAL_ENDPOINT=https://demo.reportportal.io
REPORT_PORTAL_PROJECT=healthcare_tests
REPORT_PORTAL_TOKEN=<YOUR_REPORT_PORTAL_TOKEN_HERE>
